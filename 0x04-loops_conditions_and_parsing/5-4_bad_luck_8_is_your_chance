#!/usr/bin/env bash
#This script loops from 1 to 10 and displays different messages based on the iteration count

count=1

# Loop until counter reaches 10
while [ $count -le 10 ]
do
    # Check iteration count and display appropriate message
    if [ $count -eq 4 ]
    then
        echo "bad luck"
    elif [ $count -eq 8 ]
    then
        echo "good luck"
    else
        echo "Best School"
    fi
    
    # Increment counter
    ((count++))
done